
<h2>EDITAR VIDEOJUEGO</h2>

<form action="/edit-videogame/{{id}}" method="POST">

    <label for="name">Nombre:</label>
    <input type="text" name="name" id="name" value="{{name}}">
    <br>
    <label for="developer">desarrollador:</label>
    <input type="text" name="developer" id="developer" value="{{developer}}">
    <br>
    <label for="platform">plataforma:</label>
    <input type="text" name="platform" id="platform" value="{{paltform}}">
    <br>
    <label for="genre">genero:</label>
    <input type="text" name="genre" id="genre" value="{{genre}}">
    <br>
    <label for="releaseDate">fecha lanzamiento:</label>
    <input type="text" name="releaseDate" id="releaseDate" value="{{releaseDate}}">
    <br>
    <label for="rating">nota:</label>
    <input type="text" name="rating" id="rating" value="{{rating}}">
    <br>
    <label for="pegi">codigo PEGI:</label>
    <input type="text" name="pegi" id="pegi" value="{{pegi}}">
    <br>
    <label for="imageUrl">IMAGE URL:</label>
    <input type="text" name="imageUrl" id="imageUrl" value="{{imageUrl}}">

    <button type="submit">update Videogame</button> 

</form>